{% extends "layout.njk" %}    

    {% block head %}
    <title>Courses</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    {% endblock head %}


{% block content %}

    <header>
        <div class="links">
            <a href="/">
                <img src="https://skylab.rocketseat.com.br/static/media/logo.0ae02df1.svg" alt="logo-rocketseat">   
            </a>
        </div>
    </header>

    <main>
        <section class="cards">
            {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card-image">
                    <img src="{{item.img}}" alt="{{item.id}}">
                </div>            
                <div class="card-info">
                    <p>{{item.info}}</p>
                    <p class="card-price">{{item.price}}</p>
                </div>
            </div>
            {% endfor %}      
        </section>
    </main>

    <div class="modal-overlay ">
        <div class="modal">
            <a class="close-modal">
                <span class="material-icons">
                    close                
                </span>
            </a>
            <a class="modal-fullscreen">            
                <span class="material-icons">
                    fullscreen
                </span>
            </a>

            <div class="modal-content">
                <iframe src=" " frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/scripts.js"></script>

{% endblock content %}   
