{% extends "layout.njk" %}    

    {% block head %}
    <title>Courses</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    {% endblock head %}


{% block content %}

    <header>
        <div class="links">
            <a href="/">
                <img src="https://skylab.rocketseat.com.br/static/media/logo.0ae02df1.svg" alt="logo-rocketseat">   
            </a>
        </div>
    </header>

    <main>
        <section class="cards">
            <div class="card" id="starter">
                <div class="card-image">
                    <img src="/assets/Starter.svg" alt="Starter">
                </div>            
                <div class="card-info">
                    <p>11 módulos</p>
                    <p class="card-price">Free</p>
                </div>
            </div>

            <div class="card" id="launchbase">
                <div class="card-image">
                    <img src="/assets/LaunchBase.svg" alt="LaunchBase">
                </div>                
                <div class="card-info">
                    <p>52 módulos</p>
                    <p class="card-price">Free</p>
                </div>
            </div>

            <div class="card" id="gostack">
                <div class="card-image">
                    <img src="/assets/GoStack.svg" alt="GoStack">
                </div>                
                <div class="card-info">
                    <p>52 módulos</p>
                    <p class="card-price">Free</p>
                </div>
            </div>            
        </section>
    </main>

    <div class="modal-overlay ">
        <div class="modal">
            <a class="close-modal">
                <span class="material-icons">
                    close                
                </span>
            </a>
            <a class="modal-fullscreen">            
                <span class="material-icons">
                    fullscreen
                </span>
            </a>

            <div class="modal-content">
                <iframe src=" " frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="/scripts.js"></script>

{% endblock content %}   
